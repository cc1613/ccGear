{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ccGear",
  "version": "0.1.0",
  "identifier": "com.ccgear.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "ccGear - Claude Code Configuration",
        "width": 1000,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "fs": {
      "scope": {
        "allow": ["$HOME/.claude/**", "$HOME/.claude"]
      }
    },
    "dialog": {
      "all": true
    },
    "opener": {
      "all": true
    }
  }
}
